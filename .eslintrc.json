{
  "ignorePatterns": ["node_modules/", "dist", "build/", "webpack*.js", "generated/", "*.json"],
  "extends": ["eslint:recommended", "prettier", "airbnb-base"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "legacyDecorators": true
    }
  },
  "plugins": ["lit"],
  "rules": {
    "indent": "off",
    "eqeqeq": "off",
    "no-useless-constructor": "off",
    "operator-linebreak": "off",
    "max-len": "off",
    "class-methods-use-this": "off",
    "no-underscore-dangle": "off",
    "linebreak-style": "off",
    "no-console": "off",
    "no-unused-vars": "off",
    "no-class-assign": "off",
    "disown-opener": "off",
    "no-undef": "off",
    "no-restricted-globals": "off",
    "object-curly-newline": "off",
    "lit/no-invalid-html": "off",
    "no-shadow": "off",
    "prefer-template": "off",
    "import/prefer-default-export": "off",
    "import/no-extraneous-dependencies": "off",
    "func-names": "off",
    "quotes": "off",
    "no-alert": "off",
    "prefer-const": "off",
    "no-return-assign": "off",
    "lit/attribute-value-entities": "off"
  },
  "env": {
    "browser": true,
    "es6": true,
    "es2021": true,
    "node": true
  },
  "globals": {
    "window": "readonly",
    "document": "readonly",
    "module": "readonly"
  }
}
